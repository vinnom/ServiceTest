<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.MainActivity">


    <ImageView
        android:id="@+id/switch_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:background="#bcbcbc" />

    <TextView
        android:id="@+id/switch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/switch_layout"
        android:text="@string/enable_disable_switch"
        app:layout_constraintBottom_toBottomOf="@id/switch_layout"
        app:layout_constraintStart_toStartOf="@id/switch_layout"
        android:layout_marginStart="20dp"
        android:textColor="#04243a"
        android:textSize="20sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/switch_layout"
        app:layout_constraintTop_toTopOf="@id/switch_layout"
        app:layout_constraintBottom_toBottomOf="@id/switch_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>